{
  "name": "lyn-conventional-changelog",
  "version": "1.0.2",
  "description": "Commitizen adapter following the conventional-changelog format.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "addLog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "homepage": "https://github.com/blog-lyn/cz-conventional-changelog",
  "repository": {
    "type": "git",
    "url": "https://github.com/blog-lyn/cz-conventional-changelog"
  },
  "author": "lyn <a@s76.org>",
  "license": "MIT",
  "dependencies": {
    "conventional-commit-types": "^2.0.0",
    "lodash.map": "^4.5.1",
    "longest": "^1.0.1",
    "pad-right": "^0.2.2",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.0.3"
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "lyn-conventional-changelog": "^1.0.0",
    "semantic-release": "^6.3.2"
  },
  "czConfig": {
    "path": "./"
  },
  "private": false,
  "config": {
    "commitizen": {
      "path": "./node_modules/lyn-conventional-changelog"
    }
  }
}
